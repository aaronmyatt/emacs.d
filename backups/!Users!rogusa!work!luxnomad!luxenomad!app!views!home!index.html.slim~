javascript:
  $(document).ready( function () {
    // $( "#tabs" ).tabs();
    var width = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth,
      accordion = $('.tln-accordion-custom'),
      is_clicked = false,
      $nomad_picks_slider = $(".content-nomad-picks");

    $(window).resize( function () {
      var _width = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;

      if (_width <= 640) {
        accordion.addClass('accordion');
      } else {
        accordion.removeClass('accordion');
      }
    });

    $('.content-people-say.bxslider').bxSlider({
      pager: false,
      maxSlides: 3,
      slideWidth: 385,
      slideMargin: 0,
      speed: 1000,
      auto: true,
      autoHover: true
    });

    $(document).foundation();
    $(document).foundation('tab', 'reflow');

    $("#contact-form").on('submit', function(ev) {
      ev.preventDefault();

      if (is_clicked || $(".small-6.columns").hasClass('error')) {
        return;
      }

      is_clicked = true;

      var posting = $.post("/contact_us/book_with_us", $(this).serialize());


      posting.success(function(resp) {
        if (resp.status == 200) {
          $("#contact-us-modal").foundation("reveal", "open");
          $("#contact-us-modal .wrapper").addClass("success");
          setTimeout(function() {
            $("#contact-us-modal").foundation("reveal", "close");
          }, 3000);
        } else {
          alert(resp.message);
        }
        is_clicked = false;
      }).fail(function(resp) {
        is_clicked = false;
        console.log("fail", resp);
      });
    });

    $('.button-load-more').on('click', function() {
      var $this = $(this),
        text = $this.text();
      text = text.indexOf("Show More") >= 0 ? "Show Less &laquo;" : "Show More &raquo";

      $this.html(text);
      $('.content.active > .content-nomad-picks .load-more').slideToggle(500);
    });
  });
