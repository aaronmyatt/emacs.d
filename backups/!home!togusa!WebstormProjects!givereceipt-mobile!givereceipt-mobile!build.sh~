#!/usr/bin/env bash
echo "Starting app build process"
if [ -d "./www/" ]; then
  echo "Removing old build"
  # Control will enter here if $DIRECTORY exists.
  sudo rm -r www/
fi
cd dev-env/
echo "Compiling Harp files"
sudo harp compile development ../www
cd ..
echo "Building app"
sudo rm -r platforms
ionic build android
echo "gulp-replace api urls"
gulp liveApi
if [ -d "./www/" ]; then
  echo "Serving to phone"
  # Control will enter here if $DIRECTORY exists.
  ionic run
fi


